{
    "$schema": "http://json.schemastore.org/prettierrc",

    "printWidth": 80,
    "singleQuote": false,
    "parser": "babel-ts",
    "semi": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      },
      {
        "files": "*.json5",
        "options": {
          "parser": "json5",
          "singleQuote": false,
          "quoteProps": "consistent"
        }
      },
      {
        "files": "*.md",
        "options": {
          "parser": "markdown"
        }
      },
      {
        "files": "*.{yml,yaml}",
        "options": {
          "parser": "yaml"
        }
      }
    ]
}
