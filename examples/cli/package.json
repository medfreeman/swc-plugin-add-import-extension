{
  "private": "true",
  "name": "example-cli",
  "version": "0.0.0",
  "scripts": {
    "clean": "rm -rf ./dist || del .\\dist",
    "build": "swcx compile ./src --source-root ./src --out-dir dist --out-file-extension mjs --config-file .swcrc",
    "build:move": "mv dist/src/* dist/ && rm -rf dist/src",
    "pretest": "pnpm clean && pnpm build && pnpm build:move",
    "test": "dircompare --reason --show-all --compare-content tests/expected dist"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@swc/core": "1.2.245",
    "dir-compare-cli": "1.0.1",
    "swc-plugin-add-import-extension": "workspace:*"
  }
}
