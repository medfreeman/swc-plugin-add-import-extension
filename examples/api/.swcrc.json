{
  "$schema": "https://json.schemastore.org/swcrc",

  "isModule": true,
  "module": {
    "type": "es6"
  },
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    "target": "es2022",
    "loose": false,
    "experimental": {
      "plugins": [
        [
          "swc-plugin-add-import-extension",
          {
            "^~.*": {
              "extension": "mjs",
              "addIndex": true
            },
            "^\\..*": {
              "extension": "mjs",
              "addIndex": false
            }
          }
        ]
      ]
    },
    "externalHelpers": false,
    "paths": {
      "~utils": ["./src/utils"],
      "~utils/*": ["./src/utils/*"]
    }
  },
  "minify": false
}
